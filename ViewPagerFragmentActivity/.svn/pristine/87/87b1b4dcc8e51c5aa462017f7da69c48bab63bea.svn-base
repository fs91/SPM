package edu.purdue.spm;

import android.os.Bundle;
import android.support.v4.app.Fragment;
import android.util.Log;
import android.view.LayoutInflater;
import android.view.View;
import android.view.ViewGroup;
import android.widget.TextView;

import edu.purdue.spm.dummy.ContactBook;

/**
 * A fragment representing a single CommandCenter detail screen. This fragment
 * is either contained in a {@link ContactBookListActivity} in two-pane mode
 * (on tablets) or a {@link ContactBookDetailActivity} on handsets.
 */
public class ContactBookDetailFragment extends Fragment {
	/**
	 * The fragment argument representing the item ID that this fragment
	 * represents.
	 */
	public static final String ARG_ITEM_ID = "item_id";

	/**
	 * The dummy content this fragment is presenting.
	 */
	private ContactBook.ContactInfo contact;

	/**
	 * Mandatory empty constructor for the fragment manager to instantiate the
	 * fragment (e.g. upon screen orientation changes).
	 */
	public ContactBookDetailFragment() {
	}

	@Override
	public void onCreate(Bundle savedInstanceState) {
		super.onCreate(savedInstanceState);

		if (getArguments().containsKey(ARG_ITEM_ID)) {
			// Load the dummy content specified by the fragment
			// arguments. In a real-world scenario, use a Loader
			// to load content from a content provider.
			contact = ContactBook.ITEM_MAP.get(getArguments().getString(
					ARG_ITEM_ID));
		}
	}

	@Override
	public View onCreateView(LayoutInflater inflater, ViewGroup container,
			Bundle savedInstanceState) {
		Log.i("MSG", "Dummy "+contact.userId);
		View rootView = inflater.inflate(
				R.layout.fragment_contactbook_detail, container, false);

		// Show the dummy content as text in a TextView.
		if (contact != null) {
			((TextView) rootView.findViewById(R.id.contact_userid))
			.setText(contact.userId);
			((TextView) rootView.findViewById(R.id.contact_fullname_textview))
			.setText(contact.fullName);
			((TextView) rootView.findViewById(R.id.contact_phone_textview))
			.setText(contact.phone);
			((TextView) rootView.findViewById(R.id.contact_in_group_textview))
			.setText(contact.group);
			((TextView) rootView.findViewById(R.id.contact_current_status_textview))
			.setText(contact.status);
			((TextView) rootView.findViewById(R.id.contact_current_tasklist_textview))
			.setText(contact.currentTask);
			((TextView) rootView.findViewById(R.id.contact_income_msg_textview))
			.setText("None");
		}

		return rootView;
	}
}
