<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/TableLayout1"
    style="@style/AppBaseTheme"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:gravity="top"
    android:minHeight="180dp" >

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <QuickContactBadge
                android:id="@+id/contact_picture_badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="0dp" />

            <TextView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/contact_fullname_textview"
                style="?android:attr/textAppearanceLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Contact Full Name"
                tools:context=".CommandCenterDetailFragment" />

        </LinearLayout>

    </TableRow>

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/contact_userid"
            style="?android:attr/textAppearanceLarge"
            android:layout_width="963dp"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Contact User ID"
            tools:context=".CommandCenterDetailFragment" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/contact_phone_textview"
            style="?android:attr/textAppearanceLarge"
            android:layout_width="963dp"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Phone Number"
            tools:context=".CommandCenterDetailFragment" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/contact_in_group_textview"
            style="?android:attr/textAppearanceLarge"
            android:layout_width="963dp"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="In Group"
            tools:context=".CommandCenterDetailFragment" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/contact_current_tasklist_textview"
            style="?android:attr/textAppearanceLarge"
            android:layout_width="963dp"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Current Task List"
            tools:context=".CommandCenterDetailFragment" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/contact_current_status_textview"
            style="?android:attr/textAppearanceLarge"
            android:layout_width="963dp"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Current Status"
            tools:context=".CommandCenterDetailFragment" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/contact_income_msg_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Incoming Message"
            android:textSize="22sp" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/message_to_contact_edittext"
                android:layout_width="595dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Enter here to Send Message to this Contact"
                android:padding="16dp" />

            <Button
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Button" />

        </LinearLayout>

    </TableRow>

</TableLayout>